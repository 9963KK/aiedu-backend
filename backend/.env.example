# --- App ---
APP_NAME=AIEDU Backend
APP_DEBUG=true

# --- Text LLM (already in use)
VLM_PROVIDER=openai
VLM_BASEURL=https://api.openai.com/v1
VLM_MODEL=gpt-4o-mini
VLM_APIKEY=

# --- Timeouts ---
REQUEST_TIMEOUT_SECONDS=60

# --- Materials / Ingest (Local temp storage + limits) ---
# Local temporary directory for uploaded files
STORAGE_TMP_DIR=/tmp/aiedu_uploads
# Generic upload max size (MB)
UPLOAD_MAX_MB=200
# MP4 max size (MB)
VIDEO_MAX_MB=500
# ASR transcription max duration (minutes)
AUDIO_MAX_MINUTES=120

# --- Vision QA model for PDF/PPT/Images (placeholder) ---
VQA_PROVIDER=
VQA_BASEURL=
VQA_MODEL=
VQA_APIKEY=

# --- ASR model for audio/video (placeholder) ---
ASR_PROVIDER=
ASR_BASEURL=
ASR_MODEL=
ASR_APIKEY=
ASR_LANGUAGE=auto

# --- S3 persistence (NOT ENABLED in current phase) ---
# When enabled, /materials/{id}/original-url will return a presigned URL.
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_FORCE_PATH_STYLE=false
S3_PRESIGN_EXPIRES=3600
# --- Embeddings model for retrieval (placeholder) ---
# Provider options: openai | siliconflow | azure | ollama | other
EMB_PROVIDER=
EMB_BASEURL=
EMB_MODEL=
EMB_APIKEY=
# Optional tuning
EMB_DIM=
EMB_POOLING=
EMB_BATCH=64